    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_toLeftOf="@+id/adapt_pur_his_item_total_amount"
        android:layout_alignParentLeft="true"
        android:orientation="vertical"
        android:layout_margin="10dp"
        android:layout_height="wrap_content">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/adapt_pur_his_item_desc"
            android:textSize="14dp"
            android:text="Peter England Navy T Shirt Navy T Shirt Navy"
            android:singleLine="false"
            android:textStyle="bold"
            />


        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_marginTop="5dp"
            android:orientation="horizontal"
            android:layout_height="wrap_content">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/darkgray"
                android:text="Quantity: "
                />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/darkgray"
                android:id="@+id/adapt_pur_his_item_quantity"
                android:text="5"
                />


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="15dp"
                android:textColor="@color/darkgray"
                android:text="Rate: "
                />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/darkgray"
                android:id="@+id/adapt_pur_his_item_amount"
                android:text="200"
                />
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="10dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"

            >
            <RatingBar
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                style="?android:ratingBarStyleSmall"
                android:minHeight="18dp"
                android:transformPivotX="0dp"
                android:id="@+id/adapt_pur_his_item_rate_it"
                android:transformPivotY="0dp"
                android:isIndicator="true"
                android:numStars="5"
                />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:id="@+id/adapt_pur_his_item_rate_it_text"
                android:layout_marginLeft="10dp"
                android:text="No Rating"
                />


        </LinearLayout>

        </LinearLayout>




</RelativeLayout>