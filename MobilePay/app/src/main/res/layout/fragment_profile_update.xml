<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="15dp"
            android:layout_marginTop="20dp"
            android:gravity="center_horizontal"
            android:id="@+id/profile_name_text"
            android:orientation="horizontal">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:background="@mipmap/name_icon" />

            <TextView
                style="@style/RegisterEdittextmargin"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Name" />
            </LinearLayout>
    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/ic_mode_edit_black_24dp"
        android:layout_marginRight="10dp"
        android:layout_above="@+id/profile_name"
        android:layout_alignRight="@+id/profile_name"
        android:layout_alignEnd="@+id/profile_name" />
    <EditText
        android:layout_width="match_parent"
        android:id="@+id/profile_name"
        android:layout_marginLeft="55dp"
        android:layout_marginTop="-20dp"
        android:textStyle="bold"
        android:layout_below="@+id/profile_name_text"
        android:layout_height="wrap_content"
        android:text="Nthish" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="15dp"
        android:layout_marginTop="10dp"
        android:gravity="center_horizontal"
        android:layout_below="@+id/profile_name"
        android:id="@+id/profile_edit_mobile_text"
        android:orientation="horizontal">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:background="@mipmap/name_icon" />

        <TextView
            style="@style/RegisterEdittextmargin"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Mobile No" />
    </LinearLayout>
    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/ic_mode_edit_black_24dp"
        android:layout_marginRight="10dp"
        android:layout_above="@+id/profile_edit_mobile_no"
        android:layout_alignRight="@+id/profile_name"
        android:layout_alignEnd="@+id/profile_name" />
    <EditText
        android:layout_width="match_parent"
        android:id="@+id/profile_edit_mobile_no"
        android:layout_marginLeft="55dp"
        android:layout_marginTop="-20dp"
        android:textStyle="bold"
        android:maxLength="10"
        android:inputType="number"
        android:layout_below="@+id/profile_edit_mobile_text"
        android:layout_height="wrap_content"
        android:hint="9942320690" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="15dp"
        android:layout_marginTop="10dp"
        android:gravity="center_horizontal"
        android:layout_below="@+id/profile_edit_mobile_no"
        android:id="@+id/profile_edit_pass_text"
        android:orientation="horizontal">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:background="@mipmap/grey_lock" />

        <TextView
            style="@style/RegisterEdittextmargin"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Password" />
    </LinearLayout>
    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/ic_mode_edit_black_24dp"
        android:layout_above="@+id/profile_edit_pass"
        android:layout_marginRight="10dp"
        android:layout_alignRight="@+id/profile_name"
        android:layout_alignEnd="@+id/profile_name" />
    <EditText
        android:layout_width="match_parent"
        android:id="@+id/profile_edit_pass"
        android:layout_marginLeft="55dp"
        android:layout_marginTop="-20dp"
        android:textStyle="bold"
        android:inputType="numberPassword"
        android:maxLength="6"
        android:layout_below="@+id/profile_edit_pass_text"
        android:layout_height="wrap_content"
        android:text="......" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_below="@+id/profile_edit_pass"
        android:orientation="horizontal"
        android:layout_centerInParent="true"
        android:layout_height="wrap_content">

        <Button
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:id="@+id/profile_edit_submit"
            android:layout_margin="20dp"
            android:text="Submit" />
    </LinearLayout>
    </RelativeLayout>
