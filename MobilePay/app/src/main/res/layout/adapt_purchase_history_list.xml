<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="20dp"
        android:gravity="center_horizontal"
        android:id="@+id/adapt_pur_his_time"
        android:orientation="horizontal">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/ic_shopping_basket_black_24dp" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textStyle="bold"
            android:layout_marginLeft="10dp"
            android:hint="Today, 01:44 PM" />
    </LinearLayout>

    <TextView
        android:layout_width="wrap_content"
        android:id="@+id/adapt_pur_his_amount"
        android:layout_height="wrap_content"
        android:text="20689"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_alignTop="@+id/adapt_pur_his_time" />

    <TextView
        android:layout_width="wrap_content"
        android:id="@+id/adapt_pur_his_billno"
        android:layout_marginLeft="55dp"
        android:layout_marginTop="-15dp"
        android:layout_below="@+id/adapt_pur_his_time"
        android:layout_height="wrap_content"
        android:text="Bill No: CRN 20689" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/adapt_pur_his_billno"
        android:layout_marginTop="20dp"
        android:layout_marginLeft="40dp"
        android:gravity="center_horizontal"
        android:id="@+id/adapt_pur_his_shop_name"
        android:orientation="horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textStyle="bold"
            android:layout_marginLeft="10dp"
            android:textColor="#008000"
            android:textSize="20dp"
            android:text="." />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:text="Saravana Stores,T.Nagar," />


    </LinearLayout>

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/ic_cancel_black_24dp"
        android:layout_below="@+id/adapt_pur_his_time"
        android:layout_alignLeft="@+id/adapt_pur_his_amount"
        android:layout_alignStart="@+id/adapt_pur_his_amount" />


</RelativeLayout>