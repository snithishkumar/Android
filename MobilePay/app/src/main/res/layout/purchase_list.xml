<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginLeft="10dp"
    android:layout_marginRight="10dp"
    android:layout_marginTop="20dp"
    card_view:cardCornerRadius="4dp"
    tools:context=".activities.MainActivity">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_margin="10dp"
        android:layout_height="match_parent">
        <TextView
            android:id="@+id/pur_lst_date"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textStyle="bold"
            android:text="Today, 01:44 PM"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/pur_lst_amount"
            android:text="200"
            android:textStyle="bold"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true"
            android:layout_alignTop="@+id/pur_lst_date"
            />
        <LinearLayout
            android:layout_width="match_parent"
            android:id="@+id/pur_lst_cat_bill_layout"
            android:orientation="horizontal"
            android:layout_below="@+id/pur_lst_date"
            android:layout_height="wrap_content">
            <TextView
                android:id="@+id/pur_lst_category"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Shopping"/>


            <TextView
                android:layout_width="wrap_content"
                android:id="@+id/pur_lst_spe"
                android:layout_height="wrap_content"
                android:text="."
                android:layout_marginLeft="5dp"
                android:textSize="20dp"
                android:textStyle="bold"
                />
            <TextView
                android:layout_width="wrap_content"
                android:id="@+id/pur_lst_bill_number"
                android:layout_height="wrap_content"
                android:text="CRN 2068625"
                android:layout_marginLeft="5dp"
                android:textStyle="bold"
                />

        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_below="@+id/pur_lst_cat_bill_layout"
            android:orientation="horizontal"
            android:layout_margin="10dp"
            android:layout_height="wrap_content">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@mipmap/luggage_cart"
                />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:textStyle="bold"
                android:layout_marginLeft="10dp"
                android:textColor="#008000"
                android:textSize="20dp"
                android:text="." />

            <TextView
                android:layout_width="match_parent"
                android:layout_marginTop="10dp"
                android:id="@+id/pur_lst_shop_name"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:text="Saravana Stores,T.Nagar,chennai" />

        </LinearLayout>





    </RelativeLayout>
    </android.support.v7.widget.CardView>