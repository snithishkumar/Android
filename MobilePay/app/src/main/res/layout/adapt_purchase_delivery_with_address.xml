<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="horizontal"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="5dp"
        android:id="@+id/adapt_pur_item_delivery"
        android:layout_height="wrap_content">
        <ImageView
            android:layout_width="wrap_content"
            android:layout_gravity="center|center_horizontal"
            android:layout_marginTop="1dp"
            android:background="@drawable/ic_local_shipping_black_24dp"
            android:layout_height="wrap_content" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Delivery"
            android:textSize="20dp"
            android:layout_marginLeft="10dp"
            android:textStyle="bold"
            />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_gravity="center|center_horizontal"
            android:layout_marginLeft="5dp"
            android:scaleType="center"
            android:src="@drawable/ic_help_black_24dp"
            android:layout_height="wrap_content" />
    </LinearLayout>


   <!--<TextView
       android:layout_width="match_parent"
       android:layout_height="wrap_content"
       android:text="Delivery"
       android:id="@+id/adapt_pur_item_delivery"
       android:textSize="20dp"
       android:textStyle="bold"
       />-->
    <RadioGroup
        android:layout_width="match_parent"
        android:layout_marginLeft="20dp"
        android:layout_below="@+id/adapt_pur_item_delivery"
        android:id="@+id/adapt_pur_item_delivery_options"
        android:layout_marginBottom="10dp"
        android:orientation="vertical"
        android:layout_height="wrap_content">

        <RadioButton
            android:layout_width="match_parent"
            android:layout_marginTop="5dp"
            android:id="@+id/adapt_pur_item_delivery_addr"
            android:text="15/B, 2nd cross street, sir ram nagar, Tharamani,chennai - 600 113"
            android:layout_height="wrap_content" />



        <RadioButton
            android:layout_width="match_parent"
            android:text="Luggage"
            android:id="@+id/adapt_pur_item_delivery_luggage"
            android:layout_height="wrap_content" />

        <RadioButton
            android:layout_width="match_parent"
            android:text="Billing"
            android:id="@+id/adapt_pur_item_delivery_billing"
            android:layout_height="wrap_content" />


    </RadioGroup>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="change"
        android:textColor="@android:color/holo_blue_dark"
        android:id="@+id/adapt_pur_item_delivery_addr_change"
        android:onClick="onClick"
        android:layout_alignBottom="@+id/adapt_pur_item_delivery"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
       />


