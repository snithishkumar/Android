<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"

    android:layout_marginTop="10dp"
    android:layout_marginBottom="20dp"
    android:layout_height="wrap_content">

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="5dp"
        android:id="@+id/adapt_pur_history_reason_img"
        android:background="@drawable/ic_amount_black"
        />

   <TextView
       android:layout_width="wrap_content"
       android:layout_height="wrap_content"
       android:text="Amount Details"
       android:layout_toRightOf="@+id/adapt_pur_history_reason_img"
       android:layout_marginLeft="10dp"
       android:id="@+id/adapt_pur_history_reason_text"
       android:textSize="20dp"
       android:textStyle="bold"
       />

    <LinearLayout
        android:layout_width="wrap_content"
        android:orientation="vertical"
        android:layout_marginLeft="30dp"
        android:layout_marginTop="5dp"
        android:id="@+id/amount_details_layout"
        android:layout_below="@+id/adapt_pur_history_reason_text"
        android:layout_height="wrap_content">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/amount_details_sub_total_text"
            android:text="Sub Total"
            android:layout_marginTop="5dp"
            />
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/adapt_pur_history_reason_message"
            android:text="Tax"
            android:layout_marginTop="5dp"
            />
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/amount_details_sub_total_discount"
            android:text="Discount"
            android:layout_marginTop="5dp"
            />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Delivery"
            android:layout_marginTop="5dp"
            />
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Total Amount"
            android:textSize="15dp"
            android:layout_marginTop="15dp"
            android:textStyle="bold"
            />

    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:orientation="vertical"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/amount_details_layout"
        android:layout_alignParentRight="true"
        android:layout_marginRight="5dp"
        android:layout_alignParentEnd="true">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:gravity="right"
            android:id="@+id/amount_details_sub_total_amount"
            android:text="25000"
            android:textStyle="bold"
            />
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:gravity="right"
            android:id="@+id/amount_details_sub_tax_amount"
            android:text="150.25"
            android:textStyle="bold"
            />
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:gravity="right"
            android:id="@+id/amount_details_sub_discount_amount"
            android:text="50"
            android:textStyle="bold"
            />
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:gravity="right"
            android:id="@+id/amount_details_sub_delivery_amount"
            android:text="0.0"
            android:textStyle="bold"
            />
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="500000"
            android:textSize="15dp"
            android:gravity="right"
            android:textColor="@color/colorPrimaryDark"
            android:id="@+id/amount_details_total_amount"
            android:layout_marginTop="15dp"
            android:textStyle="bold"
            />

    </LinearLayout>

</RelativeLayout>