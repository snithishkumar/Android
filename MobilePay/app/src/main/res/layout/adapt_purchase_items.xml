<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="01"
        android:id="@+id/adapt_pur_item_no"
        android:layout_margin="30dp"
        android:textSize="40dp"
        />
    <LinearLayout
        android:layout_width="wrap_content"
        android:id="@+id/adapt_pur_item_desc_layout"
        android:orientation="vertical"
        android:layout_marginTop="20dp"
        android:layout_toRightOf="@+id/adapt_pur_item_no"
        android:layout_height="wrap_content">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/adapt_pur_item_desc"
            android:textSize="15dp"
            android:text="Peter England \nNavy T Shirt Navy"
            android:singleLine="false"
            android:textStyle="bold"
            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:id="@+id/adapt_pur_item_amt"
            android:textSize="15dp"
            android:text="Rs.699.00"
            android:textStyle="bold"
            />



    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:orientation="horizontal"
        android:id="@+id/adapt_pur"
        android:layout_marginRight="10dp"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/adapt_pur_item_desc_layout"
        android:layout_alignRight="@+id/adapt_pur_item_delete"
        android:layout_alignEnd="@+id/adapt_pur_item_delete">
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/adapt_pur_item_count_dec"
            android:background="@mipmap/purchase_item_minus"
            />
        <TextView
            android:layout_width="22dp"
            android:layout_height="30dp"
            android:id="@+id/adapt_pur_item_count"
            android:text="2"
            android:textSize="20dp"
            android:gravity="center"
            android:textColor="@color/white"
            android:background="@color/colorPrimary"
            android:textStyle="bold"
            />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/adapt_pur_item_count_inc"
            android:visibility="gone"
            android:background="@mipmap/purhcase_item_plus"
            />

    </LinearLayout>

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_margin="5dp"
        android:id="@+id/adapt_pur_item_delete"
        android:background="@mipmap/purchase_item_delete"
        />

</RelativeLayout>